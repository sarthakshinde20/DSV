data
statistics.mean(data)

import sklearn

import numpy as np
np.random.seed(100)
x = np.random.randint(0,10,50)
np.corrcoef(x,x)

y = x + np.random.randint(10,20,50)
np.corrcoef(x,y)

plt.scatter(x,y)
